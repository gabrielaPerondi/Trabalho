@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="dashboard-container">

    <h2 class="dashboard-title">
        <i class="bi bi-speedometer2"></i> Painel do Administrador
    </h2>
    <p class="dashboard-subtitle">Visão geral do condomínio</p>

    <div class="info-cards">

        <!-- Condôminos -->
        <div class="info-card">
            <i class="bi bi-people-fill info-card-icon"></i>
            <div class="info-card-number">@ViewBag.TotalCondominos</div>
            <div class="info-card-label">Condôminos</div>
        </div>

        <!-- Imóveis -->
        <div class="info-card">
            <i class="bi bi-building info-card-icon"></i>
            <div class="info-card-number">@ViewBag.TotalImoveis</div>
            <div class="info-card-label">Imóveis</div>
        </div>

        <!-- Funcionários -->
        <div class="info-card">
            <i class="bi bi-person-badge-fill info-card-icon"></i>
            <div class="info-card-number">@ViewBag.TotalFuncionarios</div>
            <div class="info-card-label">Funcionários</div>
        </div>

    </div>

</div>
