@{
    Layout = "_LayoutDashboard";
}

<h2 class="text-primary mb-4">
    <i class="fa-solid fa-chart-line"></i> Painel do Administrador
</h2>

<div class="row text-center">
    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h3>@ViewBag.TotalCondominos</h3>
            <p class="text-muted">Condôminos</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h3>@ViewBag.TotalImoveis</h3>
            <p class="text-muted">Imóveis</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h3>@ViewBag.TotalFuncionarios</h3>
            <p class="text-muted">Funcionários</p>
        </div>
    </div>
</div>
