@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="page-header mb-4">
    <h2 class="fw-bold text-primary">
        <i class="fa-solid fa-chart-line me-2"></i> Painel do Administrador
    </h2>
    <p class="text-muted">Visão geral do condomínio</p>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card stat-card border-0 shadow-sm p-4 text-center">
            <div class="icon-circle bg-primary-subtle text-primary mb-3">
                <i class="fa-solid fa-users fa-lg"></i>
            </div>
            <h3 class="fw-bold">@ViewBag.TotalCondominos</h3>
            <p class="text-muted mb-0">Condôminos</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card stat-card border-0 shadow-sm p-4 text-center">
            <div class="icon-circle bg-success-subtle text-success mb-3">
                <i class="fa-solid fa-building fa-lg"></i>
            </div>
            <h3 class="fw-bold">@ViewBag.TotalImoveis</h3>
            <p class="text-muted mb-0">Imóveis</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card stat-card border-0 shadow-sm p-4 text-center">
            <div class="icon-circle bg-warning-subtle text-warning mb-3">
                <i class="fa-solid fa-user-tie fa-lg"></i>
            </div>
            <h3 class="fw-bold">@ViewBag.TotalFuncionarios</h3>
            <p class="text-muted mb-0">Funcionários</p>
        </div>
    </div>
</div>
