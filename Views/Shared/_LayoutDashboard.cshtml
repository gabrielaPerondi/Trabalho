@using Microsoft.AspNetCore.Mvc.Formatters
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VizinhApp</title>

    <!-- ======= CSS BASE ======= -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/dashboard.css")?v=@DateTime.Now.Ticks" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    @RenderSection("Styles", required: false)

    <style>
        body {
            background-color: #f4f6f9;
            font-family: "Poppins", sans-serif;
            color: #2b2d42;
            transition: all 0.3s ease;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            background: #ffffff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            padding: 0.8rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .navbar .logo {
            display: flex;
            align-items: center;
            font-size: 1.2rem;
            font-weight: 600;
            color: #007bff;
        }

        .navbar .logo i {
            font-size: 1.5rem;
            margin-right: 8px;
        }

        .theme-toggle {
            background: none;
            border: none;
            font-size: 1.3rem;
            color: #007bff;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .theme-toggle:hover {
            color: #0056b3;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: linear-gradient(180deg, #ffffff 0%, #f8f9fb 100%);
            position: fixed;
            top: 0;
            left: 0;
            border-right: 1px solid #e5e7eb;
            padding-top: 70px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: all 0.3s ease;
        }

        .sidebar nav a {
            color: #374151;
            font-weight: 500;
            padding: 12px 18px;
            margin: 2px 10px;
            display: flex;
            align-items: center;
            border-radius: 10px;
            transition: all 0.2s ease;
        }

        .sidebar nav a:hover,
        .sidebar nav a.active {
            background-color: #eaf1ff;
            color: #007bff;
            transform: translateX(4px);
        }

        /* ===== CONTENT ===== */
        .content {
            margin-left: 250px;
            padding: 30px;
            transition: all 0.3s ease;
        }

        /* ===== DARK MODE ===== */
        body.dark-mode {
            background-color: #121212;
            color: #e4e6eb !important;
        }

        body.dark-mode .navbar {
            background: #1f1f1f !important;
            box-shadow: 0 2px 6px rgba(255, 255, 255, 0.05);
        }

        body.dark-mode .sidebar {
            background: #1e1e1e !important;
            border-right: 1px solid #2c2c2c;
        }

        body.dark-mode .sidebar nav a {
            color: #ccc !important;
        }

        body.dark-mode .sidebar nav a:hover,
        body.dark-mode .sidebar nav a.active {
            background-color: #2b2b2b !important;
            color: #00aaff !important;
        }

        body.dark-mode .content {
            background-color: #121212;
        }

        body.dark-mode .btn-logout {
            border-color: #333 !important;
            color: #f87171 !important;
        }

        /* ===== CONTENT (CORRIGIDO - OCUPA TODA A TELA) ===== */
        .content {
            margin-left: 250px !important;
            padding: 40px !important;
            width: calc(100% - 250px) !important;
            max-width: 100% !important;
            transition: all 0.3s ease;
        }

        /* Quando sidebar está recolhida */
        .sidebar.active+.content,
        .sidebar.active~.content {
            margin-left: 0 !important;
            width: 100% !important;
        }

        /* Mobile */
        @@media
        (max-width: 992px) {
            .content {
                margin-left: 0 !important;
                padding: 25px !important;
                width: 100% !important;
            }
        }

        /* Celular */
       @@media
        (max-width: 768px) {
            .content {
                padding: 15px !important;
            }
        }
    </style>
</head>

<body>
    <header class="navbar">
        <div class="left d-flex align-items-center gap-3">
            <button id="toggleSidebar" class="theme-toggle">
                <i class="fa-solid fa-bars"></i>
            </button>
            <div class="logo">
                <i class="fa-solid fa-building"></i> VizinhApp
            </div>
        </div>
        <button id="themeToggle" class="theme-toggle" title="Alternar tema">
            <i class="fa-solid fa-moon"></i>
        </button>
    </header>

    <!-- SIDEBAR -->
    <aside id="sidebar" class="sidebar">
        <div>
            <nav class="nav flex-column">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link"><i class="fa-solid fa-chart-line"></i>
                    Dashboard</a>
                <a asp-controller="Imovel" asp-action="Index" class="nav-link"><i class="fa-solid fa-house"></i>
                    Imóveis</a>
                <a asp-controller="Condomino" asp-action="Index" class="nav-link"><i class="fa-solid fa-users"></i>
                    Pessoas</a>
                <a asp-controller="Contrato" asp-action="Index" class="nav-link"><i
                        class="fa-solid fa-file-contract"></i> Contratos</a>
                <a asp-controller="FinanceiroAdm" asp-action="Administrador" class="nav-link"><i
                        class="fa-solid fa-sack-dollar"></i> Financeiro</a>
                <a asp-controller="Vistorias" asp-action="Index" class="nav-link"><i
                        class="fa-solid fa-clipboard-check"></i> Vistorias</a>
                <a asp-controller="Manutencoes" asp-action="Index" class="nav-link"><i
                        class="fa-solid fa-screwdriver-wrench"></i> Manutenções</a>
                <a asp-controller="Comunicacao" asp-action="Index" class="nav-link"><i class="fa-solid fa-comments"></i>
                    Comunicação</a>
                <a asp-controller="Acesso" asp-action="Index" class="nav-link"><i class="fa-solid fa-door-open"></i>
                    Acesso</a>
                <a asp-controller="Relatorios" asp-action="Index" class="nav-link"><i class="fa-solid fa-chart-pie"></i>
                    Relatórios</a>
            </nav>
        </div>

        <div class="bottom text-center p-3">
            <div class="user-info mb-2">
                <i class="fa-solid fa-user-circle fa-2x"></i>
                <div>Admin Sistema<br><small class="text-muted">Administrador</small></div>
            </div>
            <a asp-controller="Usuario" asp-action="Logout" class="btn btn-logout w-100">
                <i class="fa-solid fa-right-from-bracket"></i> Sair
            </a>
        </div>
    </aside>

    <main class="content">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SCRIPT FINAL E CORRIGIDO -->
    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggleSidebar');
        const themeBtn = document.getElementById('themeToggle');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('active');
        });

        function setTheme(dark) {
            if (dark) {
                document.body.classList.add('dark-mode');
                themeBtn.innerHTML = '<i class="fa-solid fa-sun"></i>';
                localStorage.setItem('theme', 'dark');
            } else {
                document.body.classList.remove('dark-mode');
                themeBtn.innerHTML = '<i class="fa-solid fa-moon"></i>';
                localStorage.setItem('theme', 'light');
            }
        }

        themeBtn.addEventListener('click', () => {
            setTheme(!document.body.classList.contains('dark-mode'));
        });

        const savedTheme = localStorage.getItem('theme');
        setTheme(savedTheme === 'dark');
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>