<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VizinApp</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
            overflow-x: hidden;
        }

        /* === SIDEBAR === */
        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #fff;
            border-right: 1px solid #dee2e6;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: all 0.3s ease;
            z-index: 2000;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar .logo {
            font-size: 1.3rem;
            font-weight: bold;
            color: #007bff;
            padding: 20px;
            border-bottom: 1px solid #e9ecef;
            text-align: center;
            transition: all 0.3s ease;
        }

        .sidebar.collapsed .logo small,
        .sidebar.collapsed .logo span {
            display: none;
        }

        .nav-link {
            color: #333;
            font-weight: 500;
            padding: 10px 20px;
            border-radius: 8px;
            margin: 3px 10px;
            transition: 0.2s;
            white-space: nowrap;
        }

        .nav-link:hover,
        .nav-link.active {
            background-color: #e9f2ff;
            color: #007bff;
        }

        .nav-link i {
            width: 20px;
            margin-right: 10px;
        }

        .sidebar.collapsed .nav-link span {
            display: none;
        }

        .sidebar .bottom {
            border-top: 1px solid #e9ecef;
            padding: 15px 20px;
            transition: all 0.3s ease;
        }

        .sidebar.collapsed .bottom .user-info small,
        .sidebar.collapsed .bottom .user-info span {
            display: none;
        }

        .user-info {
            display: flex;
            flex-direction: column;
            font-size: 0.9rem;
        }

        .btn-logout {
            border: 1px solid #f5c2c7;
            color: #dc3545;
            background-color: #fff;
            width: 100%;
            text-align: center;
            margin-top: 10px;
        }

        .btn-logout:hover {
            background-color: #dc3545;
            color: white;
        }

        .content {
            margin-left: 240px;
            padding: 30px;
            transition: all 0.3s ease;
        }

        .sidebar.collapsed + .content {
            margin-left: 70px;
        }

        /* === TOGGLE BUTTON (3 barrinhas) === */
        .toggle-btn {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 2100;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 8px 10px;
            cursor: pointer;
            display: none;
        }

        @media (max-width: 992px) {
            .sidebar {
                left: -240px;
            }

            .sidebar.active {
                left: 0;
            }

            .toggle-btn {
                display: block;
            }

            .content {
                margin-left: 0;
            }
        }
    </style>
</head>

<body>

    <!-- BOTÃO DE MENU -->
    <button id="toggleSidebar" class="toggle-btn">
        <i class="fa-solid fa-bars"></i>
    </button>

    <!-- SIDEBAR -->
    <div id="sidebar" class="sidebar">
        <div>
            <div class="logo">
                <i class="fa-solid fa-building"></i> <span>VizinApp</span>
                <small>Gestão Inteligente</small>
            </div>

            <nav class="nav flex-column mt-3">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link active"><i class="fa-solid fa-chart-line"></i> <span>Dashboard</span></a>
                <a asp-controller="Imovel" asp-action="Index" class="nav-link"><i class="fa-solid fa-house"></i> <span>Imóveis</span></a>
                <a asp-controller="Condomino" asp-action="Index" class="nav-link"><i class="fa-solid fa-users"></i> <span>Pessoas</span></a>
                <a asp-controller="Contratos" asp-action="Index" class="nav-link"><i class="fa-solid fa-file-contract"></i> <span>Contratos</span></a>
                <a asp-controller="Financeiro" asp-action="Index" class="nav-link"><i class="fa-solid fa-sack-dollar"></i> <span>Financeiro</span></a>
                <a asp-controller="Vistorias" asp-action="Index" class="nav-link"><i class="fa-solid fa-clipboard-check"></i> <span>Vistorias</span></a>
                <a asp-controller="Manutencoes" asp-action="Index" class="nav-link"><i class="fa-solid fa-screwdriver-wrench"></i> <span>Manutenções</span></a>
                <a asp-controller="Comunicacao" asp-action="Index" class="nav-link"><i class="fa-solid fa-comments"></i> <span>Comunicação</span></a>
                <a asp-controller="Acesso" asp-action="Index" class="nav-link"><i class="fa-solid fa-door-open"></i> <span>Controle de Acesso</span></a>
                <a asp-controller="Relatorios" asp-action="Index" class="nav-link"><i class="fa-solid fa-chart-pie"></i> <span>Relatórios</span></a>
            </nav>
        </div>

        <div class="bottom">
            <div class="user-info">
                <i class="fa-solid fa-user-circle"></i> <span>Admin Sistema</span>
                <small>Administrador</small>
            </div>
            <a asp-controller="Usuario" asp-action="Logout" class="btn btn-logout">
                <i class="fa-solid fa-right-from-bracket"></i> Sair
            </a>
        </div>
    </div>

    <!-- CONTEÚDO -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggleSidebar');

        toggleBtn.addEventListener('click', () => {
            if (window.innerWidth < 992) {
                sidebar.classList.toggle('active');
            } else {
                sidebar.classList.toggle('collapsed');
            }
        });
    </script>
</body>

</html>
