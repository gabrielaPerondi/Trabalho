<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VizinApp</title>

    <!-- ======= CSS BASE ======= -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- ======= ESTILOS ADICIONAIS (POR VIEW) ======= -->
    @RenderSection("Styles", required: false)

    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
            overflow-x: hidden;
        }

        /* ======== NAVBAR SUPERIOR ======== */
        .navbar {
            background-color: #ffffff;
            border-bottom: 1px solid #e0e0e0;
            padding: 0.8rem 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .navbar .left {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .navbar .logo {
            display: flex;
            align-items: center;
            font-size: 1.2rem;
            font-weight: bold;
            color: #007bff;
        }

        .navbar .logo i {
            font-size: 1.4rem;
            margin-right: 8px;
        }

        .navbar .toggle-btn {
            display: none;
            background: none;
            border: none;
            color: #007bff;
            font-size: 1.6rem;
            cursor: pointer;
        }

        /* ======== SIDEBAR ======== */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #fff;
            position: fixed;
            top: 0;
            left: 0;
            border-right: 1px solid #dee2e6;
            padding-top: 70px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: transform 0.3s ease;
            z-index: 1050;
        }

        .sidebar.hidden {
            transform: translateX(-260px);
        }

        .sidebar nav a {
            color: #333;
            text-decoration: none;
            font-weight: 500;
            padding: 12px 20px;
            border-radius: 8px;
            margin: 2px 10px;
            display: flex;
            align-items: center;
            transition: 0.2s;
        }

        .sidebar nav a:hover,
        .sidebar nav a.active {
            background-color: #e9f2ff;
            color: #007bff;
        }

        .sidebar nav a i {
            width: 20px;
            margin-right: 10px;
        }

        .sidebar .bottom {
            border-top: 1px solid #e9ecef;
            padding: 15px 20px;
        }

        .btn-logout {
            border: 1px solid #f5c2c7;
            color: #dc3545;
            background-color: #fff;
            width: 100%;
            text-align: center;
            margin-top: 10px;
        }

        .btn-logout:hover {
            background-color: #dc3545;
            color: white;
        }

        /* ======== CONTEÚDO ======== */
        .content {
            margin-left: 250px;
            padding: 30px;
            transition: all 0.3s ease;
        }

        /* ======== BACKDROP ======== */
        .backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(6px);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            z-index: 1040;
        }

        .backdrop.active {
            opacity: 1;
            visibility: visible;
        }

        @@media(max-width: 992px) {
            .navbar .toggle-btn {
                display: inline-block;
            }

            .sidebar {
                transform: translateX(-260px);
                position: fixed;
                padding-top: 60px;
            }

            .sidebar.active {
                transform: translateX(0);
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }

            .content {
                margin-left: 0;
            }
        }
    </style>
</head>

<body>
    <!-- NAVBAR SUPERIOR -->
    <header class="navbar">
        <div class="left">
            <button id="toggleSidebar" class="toggle-btn">
                <i class="fa-solid fa-bars"></i>
            </button>
            <div class="logo">
                <i class="fa-solid fa-building"></i> VizinApp
            </div>
        </div>
    </header>

    <!-- MENU LATERAL -->
    <aside id="sidebar" class="sidebar">
        <div>
            <nav class="nav flex-column">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link"><i class="fa-solid fa-chart-line"></i>
                    Dashboard</a>
                <a asp-controller="Imovel" asp-action="Index" class="nav-link"><i class="fa-solid fa-house"></i>
                    Imóveis</a>
                <a asp-controller="Condomino" asp-action="Index" class="nav-link"><i class="fa-solid fa-users"></i>
                    Pessoas</a>
                <a asp-controller="Contrato" asp-action="Index" class="nav-link">
                    <i class="fa-solid fa-file-contract"></i> Contratos
                </a>
                <a asp-controller="Financeiro" asp-action="Administrador" class="nav-link">
                    <i class="fa-solid fa-sack-dollar"></i> Financeiro </a>
                <a asp-controller="Vistorias" asp-action="Index" class="nav-link"><i
                        class="fa-solid fa-clipboard-check"></i> Vistorias</a>
                <a asp-controller="Manutencoes" asp-action="Index" class="nav-link"><i
                        class="fa-solid fa-screwdriver-wrench"></i> Manutenções</a>
                <a asp-controller="Comunicacao" asp-action="Index" class="nav-link"><i class="fa-solid fa-comments"></i>
                    Comunicação</a>
                <a asp-controller="Acesso" asp-action="Index" class="nav-link"><i class="fa-solid fa-door-open"></i>
                    Acesso</a>
                <a asp-controller="Relatorios" asp-action="Index" class="nav-link"><i class="fa-solid fa-chart-pie"></i>
                    Relatórios</a>
            </nav>
        </div>

        <div class="bottom">
            <div class="user-info">
                <i class="fa-solid fa-user-circle"></i> Admin Sistema
                <small>Administrador</small>
            </div>
            <a asp-controller="Usuario" asp-action="Logout" class="btn btn-logout">
                <i class="fa-solid fa-right-from-bracket"></i> Sair
            </a>
        </div>
    </aside>

    <!-- BACKDROP -->
    <div id="backdrop" class="backdrop"></div>

    <!-- CONTEÚDO PRINCIPAL -->
    <main class="content">
        @RenderBody()
    </main>

    <!-- ======= SCRIPTS ======= -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggleSidebar');
        const backdrop = document.getElementById('backdrop');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            backdrop.classList.toggle('active');
        });

        backdrop.addEventListener('click', () => {
            sidebar.classList.remove('active');
            backdrop.classList.remove('active');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>