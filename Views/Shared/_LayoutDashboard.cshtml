<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VizinApp</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
            overflow-x: hidden;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #ffffff;
            border-right: 1px solid #dee2e6;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: all 0.3s ease;
            z-index: 2000;
        }

        .sidebar .logo {
            font-size: 1.3rem;
            font-weight: bold;
            color: #007bff;
            padding: 20px;
            border-bottom: 1px solid #e9ecef;
            text-align: center;
        }

        .sidebar .logo small {
            display: block;
            font-size: 0.75rem;
            color: #6c757d;
        }

        .nav-link {
            color: #333;
            font-weight: 500;
            padding: 10px 20px;
            border-radius: 8px;
            margin: 3px 10px;
            transition: 0.2s;
        }

        .nav-link:hover,
        .nav-link.active {
            background-color: #e9f2ff;
            color: #007bff;
        }

        .nav-link i {
            width: 20px;
            margin-right: 10px;
        }

        .sidebar .bottom {
            border-top: 1px solid #e9ecef;
            padding: 15px 20px;
        }

        .user-info {
            display: flex;
            flex-direction: column;
            font-size: 0.9rem;
        }

        .btn-logout {
            border: 1px solid #f5c2c7;
            color: #dc3545;
            background-color: #fff;
            width: 100%;
            text-align: center;
            margin-top: 10px;
        }

        .btn-logout:hover {
            background-color: #dc3545;
            color: white;
        }

        .content {
            margin-left: 240px;
            padding: 30px;
            transition: all 0.3s ease;
        }

        /* ===== TOGGLE BUTTON ===== */
        .toggle-btn {
            display: none;
            background: none;
            border: none;
            color: #007bff;
            font-size: 1.6rem;
            margin-right: 15px;
            cursor: pointer;
        }

        .topbar {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 15px 25px;
            background: #fff;
            border-bottom: 1px solid #dee2e6;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .topbar h5 {
            margin: 0;
            font-weight: 600;
            color: #007bff;
        }

        /* ===== BACKDROP ===== */
        .backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(6px);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            z-index: 1500;
        }

        .backdrop.active {
            opacity: 1;
            visibility: visible;
        }

        /* ===== ANIMAÇÃO SIDEBAR ===== */
        .sidebar {
            transform: translateX(0);
        }

        .sidebar.hidden {
            transform: translateX(-250px);
        }

        .sidebar.active {
            transform: translateX(0);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

        /* ===== RESPONSIVO ===== */
        @@media (max-width: 992px) {
            .sidebar {
                transform: translateX(-250px);
                position: fixed;
            }

            .content {
                margin-left: 0;
            }

            .toggle-btn {
                display: inline-block;
            }
        }
    </style>
</head>

<body>
    <!-- TOP BAR -->
    <div class="topbar">
        <button id="toggleSidebar" class="toggle-btn">
            <i class="fa-solid fa-bars"></i>
        </button>
        <h5>VizinApp</h5>
    </div>

    <!-- SIDEBAR -->
    <div id="sidebar" class="sidebar">
        <div>
            <div class="logo">
                <i class="fa-solid fa-building"></i> VizinApp
                <small>Gestão Inteligente</small>
            </div>

            <nav class="nav flex-column mt-3">
                <a asp-controller="Dashboard" asp-action="Index" class="nav-link active"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
                <a asp-controller="Imovel" asp-action="Index" class="nav-link"><i class="fa-solid fa-house"></i> Imóveis</a>
                <a asp-controller="Condomino" asp-action="Index" class="nav-link"><i class="fa-solid fa-users"></i> Pessoas</a>
                <a asp-controller="Contratos" asp-action="Index" class="nav-link"><i class="fa-solid fa-file-contract"></i> Contratos</a>
                <a asp-controller="Financeiro" asp-action="Index" class="nav-link"><i class="fa-solid fa-sack-dollar"></i> Financeiro</a>
                <a asp-controller="Vistorias" asp-action="Index" class="nav-link"><i class="fa-solid fa-clipboard-check"></i> Vistorias</a>
                <a asp-controller="Manutencoes" asp-action="Index" class="nav-link"><i class="fa-solid fa-screwdriver-wrench"></i> Manutenções</a>
                <a asp-controller="Comunicacao" asp-action="Index" class="nav-link"><i class="fa-solid fa-comments"></i> Comunicação</a>
                <a asp-controller="Acesso" asp-action="Index" class="nav-link"><i class="fa-solid fa-door-open"></i> Controle de Acesso</a>
                <a asp-controller="Relatorios" asp-action="Index" class="nav-link"><i class="fa-solid fa-chart-pie"></i> Relatórios</a>
            </nav>
        </div>

        <div class="bottom">
            <div class="user-info">
                <i class="fa-solid fa-user-circle"></i> Admin Sistema
                <small>Administrador</small>
            </div>
            <a asp-controller="Usuario" asp-action="Logout" class="btn btn-logout">
                <i class="fa-solid fa-right-from-bracket"></i> Sair
            </a>
        </div>
    </div>

    <!-- BACKDROP -->
    <div id="backdrop" class="backdrop"></div>

    <!-- CONTEÚDO -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggleSidebar');
        const backdrop = document.getElementById('backdrop');

        // Abre/fecha o menu
        toggleBtn.addEventListener('click', () => {
            const isActive = sidebar.classList.contains('active');
            if (isActive) {
                sidebar.classList.remove('active');
                backdrop.classList.remove('active');
            } else {
                sidebar.classList.add('active');
                backdrop.classList.add('active');
            }
        });

        // Fecha o menu ao clicar fora
        backdrop.addEventListener('click', () => {
            sidebar.classList.remove('active');
            backdrop.classList.remove('active');
        });
    </script>
</body>
</html>
