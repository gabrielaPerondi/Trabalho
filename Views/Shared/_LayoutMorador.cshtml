@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VizinhApp</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />

    <!-- CSS do site -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar do Morador -->
        <nav class="sidebar bg-light p-3 shadow-sm">
            <div class="text-center mb-4">
                <h5 class="fw-bold text-primary">üè¢ VizinhApp</h5>
                <p class="small text-muted">Gest√£o Inteligente</p>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-bar-chart"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Manutencao" asp-action="Index">
                        <i class="bi bi-wrench-adjustable"></i> Manuten√ß√µes
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Comunicacao" asp-action="Index">
                        <i class="bi bi-bell"></i> Comunica√ß√£o
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Acesso" asp-action="Index">
                        <i class="bi bi-shield-lock"></i> Controle de Acesso
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Relatorios" asp-action="Index">
                        <i class="bi bi-graph-up"></i> Relat√≥rios
                    </a>
                </li>
            </ul>

            <div class="mt-auto pt-3 border-top">
                <p class="text-muted small mb-1">
                    <i class="bi bi-person-circle"></i> @HttpContextAccessor.HttpContext.Session.GetString("NomeUsuario")<br/>
                    <span class="text-secondary">Morador</span>
                </p>
                <form asp-controller="Usuario" asp-action="Logout" method="post">
                    <button class="btn btn-outline-danger btn-sm w-100">
                        <i class="bi bi-box-arrow-right"></i> Sair
                    </button>
                </form>
            </div>
        </nav>

        <!-- Conte√∫do principal -->
        <main class="flex-fill p-4">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>