@model TrabalhoElvis2.Models.Imovel

@{
    ViewData["Title"] = "Cadastrar Imóvel";
}

<style>
    .input-custom {
        border-radius: 10px;
        padding: 10px 12px;
        background: #f9fafb;
        border: 1px solid #d1d5db;
        width: 100%;
        transition: all .2s ease;
    }
    .input-custom:focus {
        background: #fff;
        border-color: #2563eb;
        box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
    }
    label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 5px;
    }
</style>

<h2 class="fw-bold mb-4">Cadastrar novo imóvel</h2>

<form asp-action="Cadastrar" method="post" class="mt-3">

    <div class="row g-3">

        <div class="col-md-6">
            <label asp-for="Codigo"></label>
            <input asp-for="Codigo" class="input-custom" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Tipo"></label>
            <select asp-for="Tipo" class="input-custom">
                <option value="">Selecione...</option>
                <option>Apartamento</option>
                <option>Cobertura</option>
                <option>Sala Comercial</option>
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Quartos"></label>
            <input asp-for="Quartos" type="number" class="input-custom" />
            <span asp-validation-for="Quartos" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Banheiros"></label>
            <input asp-for="Banheiros" type="number" class="input-custom" />
            <span asp-validation-for="Banheiros" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Metragem">Metragem (m²)</label>
            <input asp-for="Metragem" type="number" step="0.1" class="input-custom" />
            <span asp-validation-for="Metragem" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ValorAluguel">Valor do Aluguel (R$)</label>
            <input asp-for="ValorAluguel" type="number" step="0.01" class="input-custom" />
            <span asp-validation-for="ValorAluguel" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="CondominoId">Proprietário</label>
            <select asp-for="CondominoId" class="input-custom" asp-items="ViewBag.Condominos">
                <option value="">Selecione...</option>
            </select>
            <span asp-validation-for="CondominoId" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Observacoes"></label>
            <textarea asp-for="Observacoes" rows="3" class="input-custom"></textarea>
        </div>

        <div class="col-12">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="input-custom">
                <option value="Vago">Vago</option>
                <option value="Ocupado">Ocupado</option>
            </select>
        </div>

    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success px-4">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
    </div>
</form>
