@model TrabalhoElvis2.Models.Imovel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Editar Imóvel";
}

<link rel="stylesheet" href="~/css/imoveis.css" />

<div class="container-page">
    <h2>Editar Imóvel</h2>

    <form asp-action="Editar" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Codigo">Código</label>
                <input asp-for="Codigo" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Tipo">Tipo</label>
                <input asp-for="Tipo" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Quartos">Quartos</label>
                <input asp-for="Quartos" type="number" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Banheiros">Banheiros</label>
                <input asp-for="Banheiros" type="number" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Metragem">Metragem (m²)</label>
                <input asp-for="Metragem" type="number" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="ValorAluguel">Valor do Aluguel</label>
                <input asp-for="ValorAluguel" type="number" step="0.01" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="CondominoId">Proprietário</label>
                <select asp-for="CondominoId" class="form-select" asp-items="ViewBag.Condominos">
                    <option value="">Selecione</option>
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Status">Status</label>
            <select asp-for="Status" class="form-select">
                <option value="Vago">Vago</option>
                <option value="Ocupado">Ocupado</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Observacoes">Observações</label>
            <textarea asp-for="Observacoes" class="form-control"></textarea>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>
