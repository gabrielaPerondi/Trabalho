@model TrabalhoElvis2.Models.Imovel
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- Fundo escuro -->
<div class="modal-backdrop fade show"></div>

<!-- MODAL CENTRAL BONITO -->
<div class="modal fade show" id="modalEditar" tabindex="-1" aria-hidden="true" style="display:block;">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="border-radius:16px;">

            <!-- CABEÇALHO AZUL -->
            <div class="modal-header" style="background:#0d6efd; border-radius:16px 16px 0 0;">
                <h4 class="modal-title text-white fw-bold">Editar Imóvel</h4>
                <a asp-action="Index" class="btn-close btn-close-white"></a>
            </div>

            <!-- FORMULÁRIO -->
            <form asp-action="Editar" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="modal-body p-4">

                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="fw-semibold">Código</label>
                            <input asp-for="Codigo" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="fw-semibold">Tipo</label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="">Selecione...</option>
                                <option>Apartamento</option>
                                <option>Cobertura</option>
                                <option>Sala Comercial</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label class="fw-semibold">Quartos</label>
                            <input asp-for="Quartos" type="number" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label class="fw-semibold">Banheiros</label>
                            <input asp-for="Banheiros" type="number" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label class="fw-semibold">Metragem (m²)</label>
                            <input asp-for="Metragem" type="number" step="0.1" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="fw-semibold">Valor do Aluguel (R$)</label>
                            <input asp-for="ValorAluguel" type="number" step="0.01" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="fw-semibold">Proprietário</label>
                            <select asp-for="CondominoId" class="form-select" asp-items="ViewBag.Condominos">
                                <option value="">Selecione...</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label class="fw-semibold">Observações</label>
                            <textarea asp-for="Observacoes" rows="3" class="form-control"></textarea>
                        </div>

                        <div class="col-12">
                            <label class="fw-semibold">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Vago">Vago</option>
                                <option value="Ocupado">Ocupado</option>
                            </select>
                        </div>

                    </div>

                </div>

                <!-- BOTÕES -->
                <div class="modal-footer d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-light">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4">Salvar Alterações</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Remove scroll da página -->
<style>
    body {
        overflow: hidden !important;
    }
</style>
