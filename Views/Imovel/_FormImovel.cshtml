@model TrabalhoElvis2.Models.Imovel

<style>
    .input-custom {
        border-radius: 12px;
        padding: 10px 12px;
        background: #f9fafb;
        border: 1px solid #e5e7eb;
        width: 100%;
        transition: all .2s;
    }
    .input-custom:focus {
        border-color: #2563eb;
        background: #fff;
        box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
    }
    label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 5px;
    }
</style>

<div class="row g-3">
    <div class="col-md-6">
        <label>Codigo</label>
        <input asp-for="Codigo" class="input-custom" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label>Tipo</label>
        <select asp-for="Tipo" class="input-custom">
            <option value="">Selecione</option>
            <option>Apartamento</option>
            <option>Cobertura</option>
            <option>Sala Comercial</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label>Quartos</label>
        <input asp-for="Quartos" type="number" class="input-custom" />
    </div>

    <div class="col-md-4">
        <label>Banheiros</label>
        <input asp-for="Banheiros" type="number" class="input-custom" />
    </div>

    <div class="col-md-4">
        <label>Metragem (m²)</label>
        <input asp-for="Metragem" type="number" step="0.1" class="input-custom" />
    </div>

    <div class="col-md-6">
        <label>Valor do Aluguel (R$)</label>
        <input asp-for="ValorAluguel" type="number" step="0.01" class="input-custom" />
    </div>

    <div class="col-md-6">
        <label>Proprietário</label>
        <select asp-for="CondominoId" class="input-custom" asp-items="ViewBag.Condominos">
            <option value="">Selecione...</option>
        </select>
        <span asp-validation-for="CondominoId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label>Observações</label>
        <textarea asp-for="Observacoes" class="input-custom" rows="3"></textarea>
    </div>

    <div class="col-12">
        <label>Status</label>
        <select asp-for="Status" class="input-custom">
            <option>Vago</option>
            <option>Ocupado</option>
        </select>
    </div>
</div>
