@{
    ViewData["Title"] = "Login - VizinhApp";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: 'Poppins', sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        width: 380px;
        padding: 40px 30px;
        text-align: center;
    }

    .login-container img {
        width: 80px;
        margin-bottom: 10px;
    }

    .login-container h3 {
        color: #1565c0;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .login-container p {
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 12px;
    }

    .btn-login {
        background-color: #1565c0;
        border: none;
        color: #fff;
        font-weight: 600;
        border-radius: 10px;
        width: 100%;
        padding: 10px;
        margin-top: 10px;
    }

    .btn-login:hover {
        background-color: #0d47a1;
    }

    .register-link {
        margin-top: 20px;
        font-size: 14px;
    }

    .register-link a {
        color: #1565c0;
        text-decoration: none;
        font-weight: 600;
    }

    .register-link a:hover {
        text-decoration: underline;
    }
</style>

<div class="login-container">
    <img src="https://cdn-icons-png.flaticon.com/512/906/906343.png" alt="Logo VizinhApp" />
    <h3>VizinhApp</h3>
    <p>Gestão Inteligente de Condomínios</p>

    <form asp-action="Login" method="post">
        <div class="form-group mb-3 text-start">
            <label class="fw-bold">Tipo de Usuário</label>
            <select name="tipoUsuario" class="form-control" required>
                <option value="">Selecione...</option>
                <option value="Administrador">Administrador</option>
                <option value="Síndico">Síndico</option>
                <option value="Morador">Morador</option>
            </select>
        </div>

        <div class="form-group mb-3 text-start">
            <label for="email" class="fw-bold">E-mail</label>
            <input type="email" name="email" class="form-control" placeholder="seu@email.com" required />
        </div>

        <div class="form-group mb-3 text-start">
            <label for="senha" class="fw-bold">Senha</label>
            <input type="password" name="senha" class="form-control" placeholder="Digite sua senha" required />
        </div>

        <button type="submit" class="btn-login">Entrar</button>

        @if (ViewBag.Erro != null)
        {
            <p class="text-danger mt-2">@ViewBag.Erro</p>
        }

        <div class="register-link">
            Ainda não tem conta? <a asp-action="Cadastrar" asp-controller="Usuario">Cadastre-se aqui</a>
        </div>
    </form>
</div>
