@{
    Layout = "~/Views/Shared/_LayoutSindico.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">
        <i class="fa-solid fa-user-tie"></i> Painel do Síndico - Bem-vindo, @ViewBag.NomeUsuario!
    </h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-primary">
                <h5><i class="fa-solid fa-building"></i> Imóveis</h5>
                <p class="text-muted mb-2">Gerencie os imóveis do condomínio</p>
                <a asp-controller="Imovel" asp-action="Index" class="btn btn-outline-primary btn-sm">Acessar</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-info">
                <h5><i class="fa-solid fa-clipboard-check"></i> Vistorias</h5>
                <p class="text-muted mb-2">Acompanhe as inspeções realizadas</p>
                <a asp-controller="Vistoria" asp-action="Index" class="btn btn-outline-info btn-sm">Ver Vistorias</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-warning">
                <h5><i class="fa-solid fa-screwdriver-wrench"></i> Manutenções</h5>
                <p class="text-muted mb-2">Registre e acompanhe manutenções</p>
                <a asp-controller="Manutencao" asp-action="Index" class="btn btn-outline-warning btn-sm">Acessar</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-success">
                <h5><i class="fa-solid fa-bullhorn"></i> Comunicados</h5>
                <p class="text-muted mb-2">Envie avisos para os moradores</p>
                <a asp-controller="Comunicacao" asp-action="Index" class="btn btn-outline-success btn-sm">Gerenciar</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-secondary">
                <h5><i class="fa-solid fa-calendar-days"></i> Reservas</h5>
                <p class="text-muted mb-2">Gerencie reservas das áreas comuns</p>
                <a asp-controller="Reservas" asp-action="Index" class="btn btn-outline-secondary btn-sm">Ver Reservas</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3 border-danger">
                <h5><i class="fa-solid fa-chart-line"></i> Relatórios</h5>
                <p class="text-muted mb-2">Visualize relatórios do condomínio</p>
                <a asp-controller="Relatorios" asp-action="Index" class="btn btn-outline-danger btn-sm">Abrir Relatórios</a>
            </div>
        </div>
    </div>
</div>