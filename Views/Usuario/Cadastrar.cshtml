@model TrabalhoElvis2.Models.Usuario

@{
    ViewData["Title"] = "Cadastro - VizinhApp";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: 'Poppins', sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .cadastro-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        width: 450px;
        padding: 40px 30px;
    }

    .cadastro-container h3 {
        color: #1565c0;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 12px;
    }

    .btn-primary {
        background-color: #1565c0;
        border: none;
        border-radius: 10px;
        width: 100%;
        padding: 10px;
        margin-top: 15px;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #0d47a1;
    }

    .btn-secondary {
        border-radius: 10px;
        margin-top: 10px;
        width: 100%;
    }

    .text-link {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

    .text-link a {
        color: #1565c0;
        text-decoration: none;
        font-weight: 600;
    }

    .text-link a:hover {
        text-decoration: underline;
    }
</style>

<div class="cadastro-container">
    <h3><i class="bi bi-building"></i> VizinhApp</h3>
    <p class="text-center text-muted mb-4">Crie sua conta para acessar o sistema</p>

    <form asp-action="Cadastrar" asp-controller="Usuario" method="post">
        <div class="form-group mb-3">
            <label asp-for="TipoUsuario" class="fw-bold">Tipo de Usuário</label>
            <select asp-for="TipoUsuario" class="form-control" required>
                <option value="">Selecione...</option>
                <option value="Administrador">Administrador</option>
                <option value="Síndico">Síndico</option>
                <option value="Morador">Morador</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="fw-bold">E-mail</label>
            <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Senha" class="fw-bold">Senha</label>
            <input asp-for="Senha" class="form-control" type="password" placeholder="Digite uma senha" />
        </div>

        <!-- Campos Administrador -->
        <div id="camposAdmin" class="mt-3" style="display:none;">
            <h6 class="text-primary mb-3">Informações do Administrador</h6>
            <input asp-for="NomeAdministrador" class="form-control mb-2" placeholder="Nome do Administrador" />
            <input asp-for="NomeCondominio" class="form-control mb-2" placeholder="Nome do Condomínio" />
            <input asp-for="Cnpj" class="form-control" placeholder="CNPJ" />
        </div>

        <!-- Campos Morador -->
        <div id="camposMorador" class="mt-3" style="display:none;">
            <h6 class="text-primary mb-3">Informações do Morador</h6>
            <input asp-for="NomeCompleto" class="form-control mb-2" placeholder="Nome Completo" />
            <input asp-for="Apartamento" class="form-control" placeholder="Apartamento" />
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>

        <div class="text-link">
            Já possui conta?
            <a asp-action="Login" asp-controller="Usuario">Faça login aqui</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const tipoSelect = document.querySelector('[name="TipoUsuario"]');
        const camposAdmin = document.getElementById("camposAdmin");
        const camposMorador = document.getElementById("camposMorador");

        tipoSelect.addEventListener("change", () => {
            const tipo = tipoSelect.value;
            camposAdmin.style.display = tipo === "Administrador" ? "block" : "none";
            camposMorador.style.display = tipo === "Morador" ? "block" : "none";
        });
    </script>
}
