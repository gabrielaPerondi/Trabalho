@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Novo Boleto";
}

<div class="container mt-5">
    <h3 class="fw-bold text-primary mb-4">Gerar Novo Boleto</h3>

    <form asp-action="CriarBoleto" method="post" class="card shadow-sm p-4 col-md-6">
        <div class="mb-3">
            <label class="form-label">Selecione o Contrato</label>
            <select name="contratoId" class="form-select" required>
                <option value="">-- Selecione --</option>
                @foreach (var c in ViewBag.Contratos)
                {
                    <option value="@c.Id">@c.Descricao</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Valor (R$)</label>
            <input type="number" step="0.01" name="valor" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Data de Vencimento</label>
            <input type="date" name="vencimento" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-qrcode"></i> Gerar Boleto com QR Code
        </button>
        <a asp-action="Administrador" class="btn btn-secondary ms-2">Voltar</a>
    </form>
</div>
