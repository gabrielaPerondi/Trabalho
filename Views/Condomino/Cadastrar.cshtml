@model TrabalhoElvis2.Models.Condomino

<h2 class="text-primary">Cadastrar Condômino</h2>
<hr />

<form asp-action="Cadastrar" method="post" style="max-width:700px;">
    <div class="form-group mb-3">
        <label asp-for="NomeCompleto"></label>
        <input asp-for="NomeCompleto" class="form-control" />
        <span asp-validation-for="NomeCompleto" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" />
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-control" id="tipoSelect">
            <option>Proprietário</option>
            <option>Locatário</option>
        </select>
    </div>

    <!-- Campos Locatário -->
    <div id="camposLocatario" style="display:none;">
        <h5 class="text-secondary mt-3">Dados de Locação</h5>
        <div class="form-group mb-3">
            <label asp-for="InicioLocacao">Início da Locação</label>
            <input asp-for="InicioLocacao" type="date" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="FimLocacao">Fim da Locação</label>
            <input asp-for="FimLocacao" type="date" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="ValorAluguel">Valor do Aluguel</label>
            <input asp-for="ValorAluguel" class="form-control" type="number" step="0.01" />
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Observacoes"></label>
        <textarea asp-for="Observacoes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/Condomino" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <script>
        const tipoSelect = document.getElementById("tipoSelect");
        const camposLocatario = document.getElementById("camposLocatario");

        tipoSelect.addEventListener("change", () => {
            camposLocatario.style.display = tipoSelect.value === "Locatário" ? "block" : "none";
        });
    </script>
}
